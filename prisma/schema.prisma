// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // FamilyTalks specific
  familyProfile   FamilyProfile?
  calculatorResults CalculatorResult[]
  momentosConexao MomentoConexao[]
  badges          UserBadge[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// FamilyTalks Models
model FamilyProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  familyName   String?
  familySize   Int      @default(2)
  childrenAges Int[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CalculatorResult {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  calculatorType String   // tempo-familiar, tempo-tela, roi-social, quiz-parentalidade, refeicoes
  inputData      Json
  resultData     Json
  score          Float
  category       String   // low, medium, high, excellent
  createdAt      DateTime @default(now())

  @@index([userId, calculatorType])
  @@index([createdAt])
}

model MomentoConexao {
  id                 String   @id @default(cuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type               String   // conversation, activity, affection, support, celebration
  description        String
  participants       String[]
  durationMinutes    Int
  emotionalIntensity Int      @default(3) // 1-5
  date               DateTime @default(now())
  createdAt          DateTime @default(now())

  @@index([userId, date])
}

model Badge {
  id          String      @id @default(cuid())
  name        String      @unique
  description String
  icon        String
  requirement String      // JSON describing how to earn
  category    String      // streak, milestone, special
  users       UserBadge[]
}

model UserBadge {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId    String
  badge      Badge    @relation(fields: [badgeId], references: [id])
  unlockedAt DateTime @default(now())

  @@unique([userId, badgeId])
}
